@using DuAn2811_.Models
@model DuAn2811_.Models.ComboView
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Danh mục sản phẩm</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dienthoai.css" />
    <link rel="stylesheet" href="~/css/locnhieu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DuAn2811_.styles.css" asp-append-version="true" />

</head>

<body>
    <header></header>
    <main>
        <div class="filter-bar-horizontal">
            <button id="open-filter-btn" class="filter-bar-button-primary">
                <i class="fas fa-filter"></i> Lọc
            </button>

          
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 1,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 1 ? "active" : "")">
                SAMSUNG
            </a>
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 6,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 6 ? "active" : "")">
                iPhone
            </a>
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 5,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 5 ? "active" : "")">
                OPPO
            </a>
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 7,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 7 ? "active" : "")">
                Xiaomi
            </a>
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 8,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 8 ? "active" : "")">
                Realme
            </a>
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 21,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 21 ? "active" : "")">
                VIVO
            </a>
            <a href="@Url.Action("GetManufacturer", "LocSanPham1", new { maSanXuat = 22,pageIndex = 1, pageSize = 20 })" class="filter-bar-link @(ViewBag.CurrentHangSanXuat == 22 ? "active" : "")">
                NOKIA
            </a>
          

            <div class="filter-bar-sort-section">
                <span>Sắp xếp theo:</span>
                @* Sort links - ensure these also link to proper actions if they trigger server-side filtering *@
                <a href="#" class="filter-bar-link">Nổi bật</a>
                <a href="#" class="filter-bar-link">Bán chạy</a>
                <a href="#" class="filter-bar-link">Giảm giá</a>
                <a href="#" class="filter-bar-link">Mới</a>
                <div class="filter-bar-dropdown">
                    <span class="filter-bar-link">Giá <i class="fas fa-caret-down"></i></span>
                    <div class="filter-bar-dropdown-content">
                        <a href="@Url.Action("GetProductsByCategory", new { maDanhMuc = ViewBag.CurrentDanhMuc, maHangSanXuat = ViewBag.CurrentHangSanXuat, sortOrder = "gia_asc" })"
                           class="@(ViewBag.CurrentSortOrder == "gia_asc" ? "active" : "")">Tăng dần</a>
                        <a href="@Url.Action("GetProductsByCategory", new { maDanhMuc = ViewBag.CurrentDanhMuc,maHangSanXuat = ViewBag.CurrentHangSanXuat, sortOrder = "gia_desc" })"
                           class="@(ViewBag.CurrentSortOrder == "gia_desc" ? "active" : "")">Giảm dần</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="filter-container" id="loc">
            <div class="selected-filters-container">
                <p>Đã chọn:</p>
                <div id="selected-filters"></div>
            </div>

            <div class="filter-group">
                <h3>Hãng sản xuất</h3>
                
                <div class="filter-options hang" data-filter-category="hang">
                    <button type="button" data-value="Samsung">Samsung</button>
                    <button type="button" data-value="iPhone">iPhone</button>
                    <button type="button" data-value="Xiaomi">Xiaomi</button>
                    <button type="button" data-value="OPPO">OPPO</button>
                    <button type="button" data-value="Vivo">Vivo</button>
                    <button type="button" data-value="Realme">Realme</button>
                    <button type="button" data-value="Nokia">Nokia</button>
                </div>
            </div>

            <div class="filter-group">
                <h3>Giá</h3>
                <div class="filter-options gia">
                    <button type="button" data-min="0" data-max="2000000">Dưới 2 triệu</button>
                    <button type="button" data-min="2000000" data-max="4000000">2-4 triệu</button>
                    <button type="button" data-min="4000000" data-max="7000000">4-7 triệu</button>
                    <button type="button" data-min="7000000" data-max="14000000">7-14 triệu</button>
                    <button type="button" data-min="14000000" data-max="20000000">14-20 triệu</button>
                    <button type="button" data-min="20000000" data-max="99999999">Trên 20 triệu</button>
                </div>
                <div class="price-range-group">
                    <label for="min-price">Từ:</label>
                    <input type="number" id="min-price" min="0" max="99999999" value="0">
                    <label for="max-price">Đến:</label>
                    <input type="number" id="max-price" min="0" max="99999999" value="99999999">
                </div>
                <input type="range" class="price-slider" min="0" max="99999999" step="100000" value="0" id="price-slider-min">
                <input type="range" class="price-slider" min="0" max="99999999" step="100000" value="99999999" id="price-slider-max">
            </div>

            <div class="filter-group">
                <h3>RAM</h3>             
                <div class="filter-options ram" data-filter-category="ram">
                    <button type="button" data-value="4">4GB</button>
                    <button type="button" data-value="6">6GB</button>
                    <button type="button" data-value="8">8GB</button>
                    <button type="button" data-value="12">12GB</button>
                    <button type="button" data-value="16">16GB</button>
                </div>
            </div>

            <div class="filter-group">
                <h3>Dung lượng lưu trữ</h3>
               
                <div class="filter-options dl" data-filter-category="dung_luong">
                    <button type="button" data-value="64">64GB</button>
                    <button type="button" data-value="128">128GB</button>
                    <button type="button" data-value="256">256GB</button>
                    <button type="button" data-value="512">512GB</button>
                    <button type="button" data-value="1000">1TB</button>
                </div>
            </div>

            <div class="apply-button-container">
                <button id="apply-filters-btn">Áp dụng</button>
                <button id="close-filter-btn">Đóng</button>
                
                <button id="clear-all-filters-btn" class="secondary-button">Xóa tất cả</button>
            </div>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* Ensure locnhieu.js is loaded *after* jQuery and Bootstrap if it depends on them *@
    <script src="~/js/locnhieu.js" asp-append-version="true"></script>
</body>
</html>